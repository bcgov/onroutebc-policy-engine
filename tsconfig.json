{
  "compilerOptions": {
    "module": "nodenext",
    "strict": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "outDir": "dist",
    "target": "es2017",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "**/*.spec.ts"
  ],
  "exclude": [
    "src/_examples/usage/**/*"
  ]
}